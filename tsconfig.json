{
    "compilerOptions": {
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "allowJs": true,
        "target": "es2019",
        "outDir": ".build",
        "moduleResolution": "node",
        "lib": ["es2020"],
        "rootDir": "./"
    }
}
